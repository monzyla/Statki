def podaj_wiersz():
    while True:
        print("Podaj wiersz.")
        wiersz = input()
        if wiersz.isdigit():
            if int(wiersz) > 0 and int(wiersz) < 11:
                break
            else:
                print("Nieprawidłowy znak. Podaj numer wiersza (1-10) jeszcze raz.")
        else:
            print("Nieprawidłowy znak. Podaj numer wiersza (1-10) jeszcze raz.")
    return int(wiersz) - 1
    
def podaj_kolumne():
    kolumny = "ABCDEFGHIJ"
    litery_na_cyfry = {"A":0, "B":1, "C":2, "D":3, "E":4, "F":5, "G":6, "H":7, "I":8, "J":9}
    while True:
        print("Podaj kolumnę.")
        kolumna_lit = input().capitalize()
        if kolumna_lit in kolumny:
            break
        else:
            print("Nieprawidłowy znak. Podaj kolumnę (A-J) jeszcze raz.")
    kolumna = litery_na_cyfry[kolumna_lit]
    return kolumna
